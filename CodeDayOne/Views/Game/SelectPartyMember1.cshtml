@model CodeDayOne.Models.Game

@{
    ViewData["Title"] = "SelectPartyMember1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Party Member #2 Select</h2>

<div class="row">
    @for (var i = 0; i < Model.ChampionList.Count; i++)
    {
        <button type="button" value="@i" onclick="location.href='@Url.Action("SelectPartyMember2", "Game", new { champIndex = i, player1Index = @Model.Player1Index })'">
            <img src="@Model.ChampionList[i].ImageSource" />
        </button>
    }
</div>

<hr />

<!-- This row displays both champions' information in table form.
    Currently it defaults to the first two members of the list. -->
<div class="row">
    <div class="col-md-3">
        <table class="table table-bordered">
            <tr>
                <td>Health: @Model.Player1.Health</td>
            </tr>
            <tr>
                <td>Mana: @Model.Player1.Mana</td>
            </tr>
            <tr>
                <td>Attack Speed: @Model.Player1.AttackSpeed</td>
            </tr>
            <tr>
                <td>Attack: @Model.Player1.Attack</td>
            </tr>
            <tr>
                <td>Defense: @Model.Player1.Defense</td>
            </tr>
            <tr>
                <td>Armor: @Model.Player1.Armor</td>
            </tr>
            <tr>
                <td>Magic Resist: @Model.Player1.MagicResist</td>
            </tr>
        </table>
    </div>
    <div class="col-md-3">
        <h1>@Model.Player1.Name</h1>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <td><button type="button" class="btn btn-primary">@Model.Player1.AbilityList[0].Name</button></td>
                <td><button type="button" class="btn btn-success">@Model.Player1.AbilityList[1].Name</button></td>
            </tr>
            <tr>
                <td><button type="button" class="btn btn-info">@Model.Player1.AbilityList[2].Name</button></td>
                <td><button type="button" class="btn btn-danger">@Model.Player1.AbilityList[3].Name</button></td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        
    </div>
</div>

