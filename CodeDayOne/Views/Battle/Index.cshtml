@model CodeDayOne.ViewModels.BattleViewModel
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/js/app.js"></script>
@{
    ViewData["Title"] = "BattleScreen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">BattleScreen</h2>

<hr />

<div class="text-center">
    <button class="btn btn-danger" id="createHordeButton" onclick="createMinionHorde()" type="button" href="@Url.Action("CreateMinionHorde", "GameController")">Create Random Minion Horde</button
</div>

<hr />

<div>
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <img class="champPicture" src="@Model.PartyMember1.ImageSource" />
                </div>
                <div class="col-md-6">
                    <h3><img src="https://i.imgur.com/fXyXzCk.png" /> <font color="red">@Model.PartyMember1.CurrentHealth/@Model.PartyMember1.MaxHealth</font></h3>
                    <h3><img src="https://i.imgur.com/kAPA7h3.png" /> <font color="blue">@Model.PartyMember1.CurrentMana/@Model.PartyMember1.MaxMana</font></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <tr>
                            <td><button type="button" class="btn">Basic Attack</button></td>
                            <td>0 Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-primary">@Model.PartyMember1.AbilityList[0].Name</button></td>
                            <td>@Model.PartyMember1.AbilityList[0].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-success">@Model.PartyMember1.AbilityList[1].Name</button></td>
                            <td>@Model.PartyMember1.AbilityList[1].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-info">@Model.PartyMember1.AbilityList[2].Name</button></td>
                            <td>@Model.PartyMember1.AbilityList[2].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-danger">@Model.PartyMember1.AbilityList[3].Name</button></td>
                            <td>@Model.PartyMember1.AbilityList[3].ManaCost Mana</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <img class="champPicture" src="@Model.PartyMember2.ImageSource" />
                </div>
                <div class="col-md-6">
                    <h3><img src="https://i.imgur.com/fXyXzCk.png" /> <font color="red">@Model.PartyMember2.CurrentHealth/@Model.PartyMember2.MaxHealth</font></h3>
                    <h3><img src="https://i.imgur.com/kAPA7h3.png" /> <font color="blue">@Model.PartyMember2.CurrentMana/@Model.PartyMember2.MaxMana</font></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <tr>
                            <td><button type="button" class="btn">Basic Attack</button></td>
                            <td>0 Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-primary">@Model.PartyMember2.AbilityList[0].Name</button></td>
                            <td>@Model.PartyMember2.AbilityList[0].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-success">@Model.PartyMember2.AbilityList[1].Name</button></td>
                            <td>@Model.PartyMember2.AbilityList[1].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-info">@Model.PartyMember2.AbilityList[2].Name</button></td>
                            <td>@Model.PartyMember2.AbilityList[2].ManaCost Mana</td>
                        </tr>
                        <tr>
                            <td><button type="button" class="btn btn-danger">@Model.PartyMember2.AbilityList[3].Name</button></td>
                            <td>@Model.PartyMember2.AbilityList[3].ManaCost Mana</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div id="minionBattleList" class="col-md-4">
            @for (var i = 0; i < Model.BattleMinionList.Count; i++)
            {
                <div value="@i" class="row battleMinion" onclick="highlightMinion(this)" style="border-style: groove; border-radius: 5px" >
                    <div class="col-md-6">
                        <img src="@Model.BattleMinionList[i].BlueImageURL" />
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                @Model.BattleMinionList[i].Name
                            </div>
                            <div class="col-md-12">
                                <img src="https://i.imgur.com/fXyXzCk.png" /> @Model.BattleMinionList[i].CurrentHealth/@Model.BattleMinionList[i].MaxHealth
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>