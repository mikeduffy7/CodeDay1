@model CodeDayOne.ViewModels.BattleViewModel

<div class="row">
    <h5 class="text-center">ORDER</h5>
</div>
<div id="battleOrder" class="row text-center">
    @for (var i = 0; i < Model.BattleOrder.Count; i++)
    {
        if (@Model.BattleOrder[i].ImageSource != null)
        {
            if (Model.BattleOrder[i].Name == Model.PartyMember1.Name)
            {
                <img class="orderPicture" charType="@Model.BattleOrder[i].Type" name="@Model.BattleOrder[i].Name" id="1" battleOrder="@i" src="@Model.BattleOrder[i].ImageSource" height="48" width="48" />
            }
            else if (Model.BattleOrder[i].Name == Model.PartyMember2.Name)
            {

                <img class="orderPicture" charType="@Model.BattleOrder[i].Type" name="@Model.BattleOrder[i].Name" id="2" battleOrder="@i" src="@Model.BattleOrder[i].ImageSource" height="48" width="48" />
            }

        }
        else
        {
            if (@Model.IsRed)
            {
                <img class="orderPicture" charType="@Model.BattleOrder[i].Type" id="@Model.BattleOrder[i].ID" battleOrder="@i" src="@Model.BattleOrder[i].RedImageURL" height="48" width="48" />
            }
            else
            {
                <img class="orderPicture" charType="@Model.BattleOrder[i].Type" id="@Model.BattleOrder[i].ID" battleOrder="@i" src="@Model.BattleOrder[i].BlueImageURL" height="48" width="48" />
            }
        }
    }

</div>